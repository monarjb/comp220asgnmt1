<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  

  <!--Content for add page-->

  <div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%title%></h1>
        <form class="form" method="post">
            <div class="form group">
            <label for="nameTextField">Book Title</label>
            <input type="text" class="form control" id="nameTextField" placeholder="Enter the Book Title" name="name" required>
            </div>

            <div class="form group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form control" id="authorTextField" placeholder="Enter the Book's author" name="author" required>
            </div>

            <div class="form group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form control" id="publishedTextField" placeholder="Enter the year of publication" name="published" required>
            </div>

            <div class="form group">
                <label for="descriptionTextArea">Description</label>
                <textarea type="text" class="form control" id="descriptionTextArea" placeholder="Enter a brief description" name="description" required></textarea>
            </div>

            <div class="form group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form control" id="priceTextField" placeholder="Enter the Price" name="price" required>
            </div>

            <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>Submit</button>
            <a href="/bookList" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
  </div>

   <%-include ../partials/bottom_nav.ejs%>
<%-include ../partials/footer.ejs%>